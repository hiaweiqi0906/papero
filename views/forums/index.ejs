<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Papero</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Forum</h1>
    <%if(user){%>
      <p class="lead mb-3">Welcome to Papero Forum, <%= user.firstName +' '+ user.lastName %>!</p>
  <%}%>
    <a href="/sellers/dashboard" class="btn btn-secondary">Seller Dashboard</a>
    <a href="/" class="btn btn-secondary">Homepage</a>
    <a href="/forums/new" class="btn btn-success">New Article</a>
    <a href="/forums/mypost" class="btn btn-success">View My Post</a>

    <% articles.forEach((article) => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-subtitle text-muted mb-2">
            Created By : <%= article.createdBy %>
          </div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="./<%= article.id %>" class="btn btn-primary">Read More</a>
          
        </div>
        <div class="card-body">
          <%if(article.comment){%>
            <%(article.comment).forEach(function(commentDetails){%>
              <a><%= commentDetails.userId%></a>
              <p><%= commentDetails.commentAt.toLocaleDateString()%></p>
              <h6><%= commentDetails.comments%></h6>
            <%})%>
            <%}%>
        </div>
        <div class="card-body">
          <div class="form-group">
            <form action="/forums/comment/<%= article.id %>" method="POST" >
            <label for="comments">Comments</label>
            <textarea name="comments" id="comments" class="form-control"></textarea>
            <button type="submit" >Comment</button>
          </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>