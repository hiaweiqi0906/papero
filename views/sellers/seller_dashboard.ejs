<h1 class="mt-4">Seller Dashboard</h1>
<% if(user) { %>
    <p class="lead mb-3">Welcome to Seller's Dashboard, <%= user.firstName + " " + user.lastName%>!</p>
    <a href="/sellers/upload" class="btn btn-secondary">Upload</a>
    <a href="/" class="btn btn-secondary">Homepage</a>
    <a href="/forums" class="btn btn-secondary">Forum</a>
    <a href="/users/logout" class="btn btn-secondary">Logout</a>
<%for(let i=0; i<books.length ; i++ ){%>


    <div style="width: 200px; height: 250px;background-color: burlywood;">
        <%if(files[i]){%>

            <div class="card card-body mb-3">
                <%if(files[i].isImage){%>
                    <img style="width: 100px; height: 100px;" src="../image/<%= files[i]._id %>" alt="">

                <%}else{%>
                    <%= files[i].filename%>
                <%}%>
                                <!-- <form  method="POST" action="/files/<%= files[i]._id %>?_method=DELETE">
                <button class="btn btn-danger btn-block mt-4">Delete</button>
            </form> -->
            </div>

        <%} else {%>
            <p> No files to show</p>
        <%}%>
        <p>
        <%= books[i].bookTitle %>
        <form  method="GET" action="/sellers/edit/<%= books[i]._id %>">
            <button class="btn btn-danger btn-block mt-4">Edit</button>
        </form>
        </p>
    </div>
<%}%>


<% }%>